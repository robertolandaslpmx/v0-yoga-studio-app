@model YogaStudioApp.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 fw-bold text-purple-600">Panel de Administración</h1>
    <div class="d-flex align-items-center">
        <i class="fas fa-user-shield text-danger me-2"></i>
        <span class="badge bg-danger">Administrador</span>
    </div>
</div>

<!-- Estadísticas principales -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card h-100 border-start border-4 border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Total Estudiantes</h5>
                        <h2 class="text-primary fw-bold">@Model.TotalStudents</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-user-graduate fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 border-start border-4 border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Total Docentes</h5>
                        <h2 class="text-warning fw-bold">@Model.TotalTeachers</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chalkboard-teacher fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 border-start border-4 border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Total Clases</h5>
                        <h2 class="text-success fw-bold">@Model.TotalClasses</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-book-open fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estadísticas financieras -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card h-100 border-start border-4 border-purple-600">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Ingresos Mensuales</h5>
                        <h2 class="text-purple-600 fw-bold">$@Model.MonthlyRevenue.ToString("N0")</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x text-purple-600"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 border-start border-4 border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Membresías Activas</h5>
                        <h2 class="text-info fw-bold">@Model.ActiveMemberships</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-id-card fa-2x text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 border-start border-4 border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Pagos Pendientes</h5>
                        <h2 class="text-danger fw-bold">@Model.PendingPayments</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-exclamation-triangle fa-2x text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Acciones rápidas -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title fw-bold text-purple-600">
                    <i class="fas fa-cogs me-2"></i>Gestión del Sistema
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a href="@Url.Action("Courses", "Admin")" class="btn btn-purple">
                        <i class="fas fa-book-open me-2"></i>Gestionar Cursos
                    </a>
                    <a href="@Url.Action("Teachers", "Admin")" class="btn btn-outline-purple">
                        <i class="fas fa-chalkboard-teacher me-2"></i>Gestionar Docentes
                    </a>
                    <a href="@Url.Action("PaymentReports", "Admin")" class="btn btn-outline-purple">
                        <i class="fas fa-chart-bar me-2"></i>Informes de Pagos
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title fw-bold text-purple-600">
                    <i class="fas fa-bell me-2"></i>Notificaciones Recientes
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-plus text-success me-3"></i>
                            <div>
                                <h6 class="mb-1">Nuevo estudiante registrado</h6>
                                <small class="text-muted">Hace 2 horas</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-credit-card text-warning me-3"></i>
                            <div>
                                <h6 class="mb-1">Pago pendiente de revisión</h6>
                                <small class="text-muted">Hace 4 horas</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar text-info me-3"></i>
                            <div>
                                <h6 class="mb-1">Nueva clase programada</h6>
                                <small class="text-muted">Hace 1 día</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
