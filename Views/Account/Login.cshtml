@section Scripts {
    <script>
        $(document).ready(function() {
            // Función para copiar credenciales al formulario
            $('.bg-light').click(function() {
                const email = $(this).find('code').first().text();
                const password = $(this).find('code').last().text();
                
                $('#Email').val(email);
                $('#Password').val(password);
                
                // Agregar efecto visual
                $(this).addClass('border border-purple-300');
                setTimeout(() => {
                    $(this).removeClass('border border-purple-300');
                }, 1000);
            });
            
            // Agregar cursor pointer a las credenciales
            $('.bg-light').css('cursor', 'pointer');
            
            // Tooltip para indicar que se puede hacer clic
            $('.bg-light').attr('title', 'Haz clic para usar estas credenciales');
            
            // Inicializar tooltips de Bootstrap
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
